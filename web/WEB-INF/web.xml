<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>controller.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>controller.RegServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>InspectorServlet</servlet-name>
        <servlet-class>controller.InspectorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InspectorServlet</servlet-name>
        <url-pattern>/inspector</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/login.jsp</url-pattern>
        <url-pattern>/register.jsp</url-pattern>
        <url-pattern>/inspectorLogin.jsp</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/register</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>InspectorFilter</filter-name>
        <filter-class>filter.InspectorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>InspectorFilter</filter-name>
        <url-pattern>/inspector</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/user</url-pattern>
    </filter-mapping>


    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <error-page>
        <exception-type>exception.UserNotFoundException</exception-type>
        <location>/error/notfoud.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.AlreadyExistUserException</exception-type>
        <location>/error/already.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.AddInspectorToUserException</exception-type>
        <location>/error/inspector.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.InvalidRegistrationException</exception-type>
        <location>/error/reg.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.NotEqualsPasswordException</exception-type>
        <location>/error/pass.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.ReportFileException</exception-type>
        <location>/error/report.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.DataBaseRuntimeException</exception-type>
        <location>/error/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
<!--    <error-page>-->
<!--        <location>/error.jsp</location>-->
<!--    </error-page>-->
</web-app>